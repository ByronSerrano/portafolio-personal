---
import Layout from "@/layouts/Layout.astro";
---

<Layout title="Page Not Found">
  <main class="relative grid min-h-[80svh] place-items-center px-6 py-24">
    <div class="max-w-prose text-center">
      <p class="font-mono text-xs uppercase tracking-[0.3em] /60">Error 404</p>
      <h1
        class="mt-3 text-5xl sm:text-6xl md:text-7xl font-extrabold tracking-tight bg-clip-text drop-shadow-[0_0_24px_rgba(16,185,129,0.15)]"
      >
        Page Not Found
      </h1>
      <p class="mt-4 /75">
        Sorry, the page that you you are looking for doesn't exist or was
        removed.
      </p>

      <div class="mt-8 flex items-center justify-center gap-3">
        <a
          href="/"
          class="inline-flex items-center gap-2 rounded-md border border-white/15 bg-white/5 px-5 py-3 text-sm font-medium text-white/90 transition hover:bg-white/10 hover: focus:outline-none focus-visible:ring-2 focus-visible:ring-cyan-400"
        >
          Back to Home
        </a>
        <a
          href="/contact"
          class="inline-flex items-center gap-2 rounded-md border border-white/10 px-5 py-3 text-sm /70 transition hover:text-white/90 hover:border-white/30"
        >
          Contact
        </a>
      </div>

      <div class="mt-10 font-mono text-xs text-white/40">
        <span class="select-all">/404</span>
        <span aria-hidden="true" class="mx-2">â€¢</span>
        <span>Not Founded</span>
      </div>
    </div>

    <!-- Fondo sutil tipo grid + glow -->
    <div
      aria-hidden="true"
      class="pointer-events-none absolute inset-0 -z-10 [mask-image:radial-gradient(60%_60%_at_50%_50%,black,transparent)]"
    >
      <div
        class="absolute inset-0 bg-[linear-gradient(to_right,transparent_0,rgba(255,255,255,0.04)_1px,transparent_1px),linear-gradient(to_bottom,transparent_0,rgba(255,255,255,0.04)_1px,transparent_1px)] bg-[size:24px_24px]"
      >
      </div>
      <div
        class="absolute inset-x-0 top-1/3 h-40 bg-gradient-to-b from-cyan-500/10 to-transparent blur-3xl"
      >
      </div>
    </div>
  </main>
</Layout>
